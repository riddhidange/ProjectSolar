  <body>
  
  <div class="row topnav">
      <div class="col col-lg-2">
        <h3 class="float-md-start mb-0 justify-content-md-left">Project<span class="text-warning">SOLAR</span></h3>
      </div>
      <div class="col float-md-end mb-0 justify-content-md-right">
            <nav class="nav nav-masthead justify-content-left float-md-end navbar-expand-sm">
            <a class="nav-link active" aria-current="page" href="/home">Home</a>
            <!-- <a class="nav-link " href="#">Log Out</a> -->
            
            </nav>
      </div>
    </div> 
    <div style="padding-top: 20px;">
  
        <h3>PROJECT PLAN</h3>
  
        <table class="table table-bordered">
            <!-- <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">First</th>
                <th scope="col">Last</th>
                <th scope="col">Handle</th>
              </tr>
            </thead> -->
            <tbody>
              <tr>
                
                <td width="200" style="font-weight:bold">Project Name</td>
                <td width="500"><%= name %>
                    </td>
  
              </tr>
              <tr>
  
                <td style="font-weight:bold">Project ID</td>
                <td ><%= _id %></td>
                
  
              </tr>
              <tr>
  
                <td style="font-weight:bold">Customer Name</td>
                <td><%= customerName %></td>
              </tr>
              <tr>
  
                <td style="font-weight:bold">Customer Email ID</td>
                <td><%= customerEmail %></td>
  
              </tr>
              <tr>
  
                <td style="font-weight:bold">Customer Phone Number</td>
                <td><%= phone %></td>
  
              </tr>
              <tr>
  
                <td style="font-weight:bold">Property Address</td>
                <td><%= propertyAddress %></td>
  
              </tr>
              <tr>
  
                <td style="font-weight:bold">Property Size</td>
                <td><%= projectSize %> sq ft</td>
  
              </tr>
              <tr>
  
                <td style="font-weight:bold">Status</td>
                <td><%= status %></td>
  
              </tr>
              <tr>
  
                <td style="font-weight:bold">Project Notes</td>
                <td><%= description %></td>
  
              </tr>
            </tbody>
          </table>
    </div>
  
  
  
  
  
  
  <div style="padding-top: 20px;">
      <h3>PROJECT MILESTONE</h3>
      <% if(timeline.length > 0) { %>
      <table class="table table-bordered">
      <tbody>
          <th>Status</th>
          <th>Date</th>
          <% for (let i = 0; i < timeline.length; i++) { %>
              <tr>
                  <td><%= timeline[i].status %></td>
                  <td><%= timeline[i].start %></td>
                  
              </tr> 
              <% } %>
        </tbody>
      </table>
      <% } %>
  </div>
  <div class="bruh" style="padding-top:20px">
      <h3>IMAGES </h3>
      <% if(images && images.length > 0) { %>
          <% for (let i = 0; i < images.length; i++) { %>
          <img src="<%= images[i] %>" alt="<%= images[i] %>" height="320px" width="640px">
          <% } %>
      <% } else { %>
          <h2>No images uploaded</h2>
      <% } %>
  </div>
  <br><br>

  </body> 